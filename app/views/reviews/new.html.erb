<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h1>Add a new review to <%= @restaurant.name %></h1>

      <%= simple_form_for([@restaurant, @review]) do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: 1..5 %>

        <%= f.submit "Add review", class: "btn btn-primary" %>
      <% end %>

    </div>
  </div>
</div>

