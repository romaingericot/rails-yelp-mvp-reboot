<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h1>Our restaurants :</h1>
      <ul class="list-group">
        <% @restaurants.each do |restaurant| %>
          <li class="list-group-item">
            <%= link_to restaurant.name, restaurant_path(restaurant) %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
